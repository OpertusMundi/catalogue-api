{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/OpertusMundi/catalogue-api/tree/master/metadata-schema/extended.json##",
  "title": "Opertus Mundi Extended Metadata Elements",
  "type": "object",
  "properties": {
    "publisher_id": {
      "title": "Publisher Identifier",
      "description": "A system identifier for publisher of this dataset.",
      "type": "string"
    },
    "pricing_models": {
      "title": "Pricing Models",
      "description": "Detailed multi-line description to fully explain the Item.",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "totalPriceExcludingTax": {
            "type": "number"
          },
          "includesUpdates": {
            "type": "boolean"
          },
          "yearsOfUpdates": {
            "type": "number"
          },
          "duration": {
            "type": "number"
          },
          "monthlyPrice": {
            "type": "number"
          },
        }
      }
    }
  }
}